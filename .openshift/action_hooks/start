#!/bin/bash

if [ -f $OPENSHIFT_DATA_DIR/.bashrc ]; then
	source $OPENSHIFT_DATA_DIR/.bashrc;
fi

if [ $OPENSHIFT_APP_NAME = "diy" ]; then
	HOST=$OPENSHIFT_DIY_IP
	PORT=$OPENSHIFT_DIY_PORT
elif [ $OPENSHIFT_APP_NAME = "python" ]; then
	HOST=$OPENSHIFT_PYTHON_IP
	PORT=$OPENSHIFT_PYTHON_PORT
else
	HOST="localhost"
	PORT=8080
fi

nohup python3 $OPENSHIFT_REPO_DIR/wsgi.py $HOST $PORT $OPENSHIFT_MONGODB_DB_HOST $OPENSHIFT_MONGODB_DB_PORT $OPENSHIFT_MONGODB_DB_USERNAME $OPENSHIFT_MONGODB_DB_PASSWORD
